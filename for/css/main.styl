for font-face in 'bebasneue-webfont' 'exo-regular-webfont'
	@font-face
		font-family font-face
		font-style normal
		font-weight normal
		src url("fuentes"/font-face/font-face".eot")
		src: url("fuentes"/font-face/font-face".eot?#iefix") format('embedded-opentype'),
	         url("fuentes"/font-face/font-face".woff") format('woff'),
	         url("fuentes"/font-face/font-face".ttf") format('truetype'),
	         url("fuentes"/font-face/font-face".svg#"font-face"") format('svg');

body
	background red
	width 100%
	height 100%
.fuente_bebasneue
	font-family 'bebasneue-webfont'
	font-size 50px
	background green
	height 250px
.fuente_exo
	font-family 'exo-regular-webfont'
	font-size 40px
	background blue
	height 200px

